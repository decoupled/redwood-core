{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["ES2019"],
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/just-stack-single-lib/node_modules/@types"
    ],
    "experimentalDecorators": true,
    "noImplicitAny": false
  },

  "include": ["src"]
}
